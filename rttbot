<body>

  <div class="container">
    <h1>Brawl Stars Player Stats</h1>
    <input type="text" id="playerTag" placeholder="Enter Player Tag (e.g., #XXXXXX)">
    <br>
    <button onclick="fetchPlayerStats()">Get Stats</button>
    
    <div class="stats" id="stats">
      <!-- Player stats will appear here -->
    </div>
  </div>

  <script>
    function fetchPlayerStats() {
      const playerTag = document.getElementById('playerTag').value;
      if (!playerTag) {
        alert('Please enter a valid Player Tag!');
        return;
      }
      
      // Fetch the player's stats using Brawl Stars API (replace 'YOUR_API_KEY')
      fetch(`https://api.brawlstars.com/v1/players/%23${playerTag.replace('#', '')}`, {
        method: 'GET',
        headers: {
          'Authorization': 'eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzUxMiIsImtpZCI6IjI4YTMxOGY3LTAwMDAtYTFlYi03ZmExLTJjNzQzM2M2Y2NhNSJ9..4i79LjVmkfwFgo6o6E_uicDvzGnf_PjMR0wduRszWSe8RVHM4efvH-0UDodW7UtYTQ-dPABmTN_4Vtv8DQzOPA
'
        }
      })
      .then(response => response.json())
      .then(data => {
        const statsDiv = document.getElementById('stats');
        statsDiv.innerHTML = `
          <div><strong>Player Name:</strong> ${data.name}</div>
          <div><strong>Trophies:</strong> ${data.trophies}</div>
          <div><strong>Highest Trophies:</strong> ${data.highestTrophies}</div>
          <div><strong>3v3 Victories:</strong> ${data['3vs3Victories']}</div>
          <div><strong>Solo Victories:</strong> ${data.soloVictories}</div>
          <div><strong>Duo Victories:</strong> ${data.duoVictories}</div>
        `;
      })
      .catch(error => {
        alert('Error fetching player stats! Make sure your Player Tag is correct.');
        console.error(error);
      });
    }
  </script>

